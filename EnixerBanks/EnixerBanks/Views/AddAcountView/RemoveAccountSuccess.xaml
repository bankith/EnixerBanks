<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EnixerBanks.AddAcountView.RemoveAccountSuccess">
    <ContentPage.Content>
        <AbsoluteLayout>
            <StackLayout Spacing="40" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1" Padding="0,100,0,0">



                <Image Source="iconCheck" HeightRequest="180" VerticalOptions="Center"/>
                <Label Text="Remove Account Successfully" FontSize="27" Margin="0,0,0,0" HorizontalOptions="CenterAndExpand" VerticalOptions="Center"/>
                <Label Text="You've successfully address your Savings Account" FontSize="Small" HorizontalOptions="Center" HorizontalTextAlignment="Center" VerticalOptions="Center" Margin="40,0,40,5" TextColor="Gray" />



            </StackLayout>


            <Button CornerRadius="0" Text="DONE" TextColor="White" BackgroundColor="{StaticResource primaryGreen}" AbsoluteLayout.LayoutBounds="0,1,1,50" AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional" Clicked="Button_Clicked" ></Button>

        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>